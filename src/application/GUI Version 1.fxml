<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Refresh Feed">
            <items>
              <MenuItem mnemonicParsing="false" text="Refresh RSS Feed Manually" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Test Table">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#testRSSAdding" text="Test Adding RSS Feeds to Table" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Quit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#endApplication" text="Exit Application" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Untitled Tab 1">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <TreeTableView fx:id="table" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #7FFF00;" BorderPane.alignment="CENTER">
                          <columns>
                            <TreeTableColumn fx:id="title" prefWidth="200.0" text="Article Title:" />
                              <TreeTableColumn fx:id="author" prefWidth="150.0" text="Author:" />
                              <TreeTableColumn fx:id="date" prefWidth="100.0" text="Date:" />
                              <TreeTableColumn fx:id="descriptionAndText" prefWidth="350.0" text="Article: (Click to Expand)" />
                          </columns>
                        </TreeTableView>
                     </center>
                     <top>
                        <HBox prefHeight="15.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                           <children>
                              <TextField fx:id="userInput" prefHeight="15.0" prefWidth="700.0" promptText="Place RSS Feed URL Here" />
                              <Button mnemonicParsing="false" onAction="#add" prefHeight="15.0" prefWidth="100.0" text="Retreive Feed" />
                           </children>
                        </HBox>
                     </top>
                  </BorderPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
